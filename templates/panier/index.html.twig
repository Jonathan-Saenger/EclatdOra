{% extends 'base.html.twig' %}

{% block title %}Votre panier d'achat{% endblock %}

{% block body %}

<div class="container my-5">
    <h3 class="text-center mb-5">Récapitulatif de votre commande</h3>
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Prestation</th>
                    <th scope="col">Durée</th>
                    <th scope="col">Prix (unitaire)</th>
                    <th scope="col">Quantité</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example rows, replace with dynamic content -->
                <tr>
                    <td>Titre de l'offre</td>
                    <td>1 heure</td>
                    <td>50 €</td>
                    <td>2</td>
                    <td class="text-center">
                        <button class="btn btn-danger btn-sm RemoveLink" data-id="123">Retirer</button>
                    </td>
                </tr>
                <tr>
                    <td>Titre de l'offre</td>
                    <td>30 minutes</td>
                    <td>25 €</td>
                    <td>1</td>
                    <td class="text-center">
                        <button class="btn btn-danger btn-sm RemoveLink" data-id="456">Retirer</button>
                    </td>
                </tr>
                <!-- End example rows -->
                <tr class="table-info">
                    <td colspan="3" class="text-end fw-bold">Total</td>
                    <td colspan="2" id="cart-total" class="fw-bold">125 €</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center mt-2">
        <a href="{{ path('app_construction') }}" class="bouton-or">Payer ma commande</a>
    </div>
</div>

{% endblock %}
