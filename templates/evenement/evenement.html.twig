{% extends 'base.html.twig' %}

{% block title %}Evènements{% endblock %}

{% block body %}

    <div class="my-3">
        <div class="p-5 text-center bg-body-tertiary" style="background-image: url('{{asset('images/entete_evenements.png')}}'); background-size: cover; background-position: center; height: 300px; width: 100%">
            <div class="container pt-3">
                <h1> RETROUVONS-NOUS A MES EVENEMENTS</h1>
            </div>
        </div>
    </div>

    {% for evenement in evenements %}

        <div class="container">
            <div class="card text-center m-5">
                <div class="card-header">
                    <h2> {{ evenement.getTitle() }}</h2>
                </div>
                <div class="card-body">
                    <img src="{{asset('images/exemple_evenement.png')}}" class="img-fluid" width="550px" height="100%" alt="...">
                    <p class="lead"> {{ evenement.getDescription() | raw  }} </p>
                    <p class="lead fw-semibold"> L'évènement débutera le {{evenement.getStart|format_date('long', locale='fr') }} </p>
                    <p class="lead fw-semibold"> et se terminera le {{evenement.getEnd|format_date('long', locale='fr') }} </p>
                    <p class="lead fw-bold"> Prix : {{ evenement.getPrice()}} € </p>
                    <a href="#" class="bouton-or">S'inscrire à l'évènement</a>
                </div>
                <div class="card-footer text-body-secondary">
                    Créé le {{evenement.getCreateAt|format_date('long', locale='fr') }}
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock %}
