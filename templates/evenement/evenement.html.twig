{% extends 'base.html.twig' %}

{% block title %}Évènements{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="text-center mb-5">
                    <h1 class="display-4"> ✨ RETROUVONS-NOUS À MES ÉVÉNEMENTS ✨ </h1>
                </div>
            </div>
        </div>

<div class="row">
            {% for evenement in evenements %}
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow border-0" style="background: linear-gradient(135deg, #fff, #fdf3e7);">
                        <div class="card-header text-center" style="background-color: #D19039; color: #fff;">
                            <h5 class="card-title m-0">{{ evenement.getTitle() }}</h5>
                        </div>
                        <img src="{{ vich_uploader_asset(evenement, 'imageFile') }}" class="card-img-top" alt="Image de l'évènement à venir" style="max-height: 300px; object-fit: cover; border-bottom: 5px solid #D19039;">
                        <div class="card-body">
                            <p class="card-text text-muted">{{ evenement.getDescription() | raw }}</p>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item" style="background-color: #fefaf4;"><strong>🕒 L'évènement débutera :</strong> {{ evenement.getStart | format_datetime('medium', 'short', locale='fr') }}</li>
                                <li class="list-group-item" style="background-color: #fefaf4;"><strong>🕔 et prendra fin :</strong> {{ evenement.getEnd | format_datetime('medium', 'short', locale='fr') }}</li>
                                <li class="list-group-item" style="background-color: #fefaf4;"><strong>💰 Prix :</strong> {{ evenement.getPrice() }} €</li>
                                <li class="list-group-item" style="background-color: #fefaf4;"><strong>📍 Adresse :</strong> {{ evenement.getAdresse() }}</li>
                                <li class="list-group-item" style="background-color: #fefaf4;"><strong>📬 Code Postal :</strong> {{ evenement.getCodePostal() }}</li>
                                <li class="list-group-item" style="background-color: #fefaf4;"><strong>🎟️ Places disponibles :</strong> {{ evenement.getPlace() }}</li>
                            </ul>
                        </div>
                        <div class="card-footer text-center" style="background-color: #f9f2e9;">
                            <a href="{{ path('app_construction_prestation')}}" class="bouton-or">✨ S'inscrire à l'évènement ✨</a>
                        </div>
                        <div class="text-center mt-2 mb-3">
                            <small class="text-muted">Créé le {{ "now" | date('d/m/Y') }} par Cédric</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if evenements is empty %}
            <div class="col-12 text-center mt-5">
                <p class="text-muted display-6" style="color: #D19039;">Aucun évènement n'est disponible pour le moment. Revenez plus tard !</p>
            </div>
        {% endif %}
    </div>
    </div>

{% endblock %}