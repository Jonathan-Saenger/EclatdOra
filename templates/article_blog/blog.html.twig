{% extends 'base.html.twig' %}

{% block title %}Mon blog{% endblock %}

{% block body %}

    <main class="container">
        <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis" style="background-image: url('{{asset('images/entete_blog.png')}}'); background-size: cover; background-position: center;">
            <div class="col-lg-6 px-0">
                <h2 class="display-4 fst-italic fw-bold">Titre général du Blog</h2>
                <p class="lead my-3 fw-semibold">Multiple lines of text that form the lede, informing new readers quickly and efficiently about what’s most interesting in this post’s contents.</p>
            </div>
        </div>
    </main>

    <div class="album py-3 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {% for article in articles %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                            <div class="card-body">
                              <p class="fw-medium"> {{ article.getTitle() }} </p>
                              <p class="card-text"> {{ article.getContent()|striptags|slice(0,350) }}</p>
                                  <div class="d-flex justify-content-between align-items-center">
                                      <div class="btn-group">
                                          <a href="{{ path('app_article', {'id': article.id}) }}" target="_blank" class="icon-link gap-1 icon-link-hover stretched-link"> Poursuivre la lecture </a>
                                      </div>
                                      <small class="text-body-secondary">Ecrit le {{article.getCreateAt|format_date('long', locale='fr') }}</small>
                                  </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
